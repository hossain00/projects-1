<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>Reimbursement</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>


	<servlet>
		<servlet-name>ReimbEmployeeServlet</servlet-name>
		<servlet-class>ers.servlet.ReimbEmployeeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ReimbEmployeeServlet</servlet-name>
		<url-pattern>/secure/Emp.do</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>ers.servlet.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login.do</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>AddReimbServlet</servlet-name>
		<servlet-class>ers.servlet.AddReimbServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AddReimbServlet</servlet-name>
		<url-pattern>/secure/addreimb.do</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>ReimbManagerServlet</servlet-name>
		<servlet-class>ers.servlet.ReimbManagerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ReimbManagerServlet</servlet-name>
		<url-pattern>/secure/Manager.do</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>UpdateStatusServlet</servlet-name>
		<servlet-class>ers.servlet.UpdateStatusServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UpdateStatusServlet</servlet-name>
		<url-pattern>/secure/updatereimb.do</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
		<servlet-name>LogOutServlet</servlet-name>
		<servlet-class>ers.servlet.LogOutServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LogOutServlet</servlet-name>
		<url-pattern>/secure/logout.do</url-pattern>
	</servlet-mapping>



	<filter>
		<filter-name>MyFilter</filter-name>
		<filter-class>ers.servlet.MyFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>MyFilter</filter-name>
		<url-pattern>/secure/*</url-pattern>
	</filter-mapping>

</web-app>